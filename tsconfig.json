{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2018",
    "strict": true,
    "outDir": "./dist/js/",  
    "strictNullChecks": false,
    "noEmitHelpers": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./assets",
    "./src",
    "./engine"
  ]
}