{
    "compilerOptions": {
        "outDir": "out/",
        "module": "CommonJS",
        "target": "ESNext",
        "strict": true,
        "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致性
        "strictPropertyInitialization": false,  //不强制必须初始化成员
    },
    "include": [
        "./src/**/*"                            // 包含当前目录及子目录下的所有文件
      ],
      "exclude": [
        "node_modules",                      // 排除node_modules
        "**/*.spec.ts"                       // 排除测试文件
      ]    
}