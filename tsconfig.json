{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2017",
    "strict": true,
    "strictNullChecks": false,
    "noEmitHelpers": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./assets",
    "./src",
    "./engine"
  ]
}